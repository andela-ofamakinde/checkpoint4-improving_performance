<%= will_paginate @authors %>
<div class="author">
  <% @authors.each do |author| %>
    <% cache author do %>
      <h2>My name is <%= author.name %></h2>
      <% author.articles.each do |article| %>
        <% cache article do %>
        <p>I wrote: <span style="text-decoration: underline"><%= link_to article.name, articles_show_path(article) %> </span></p> 
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
<%= will_paginate @authors %>

